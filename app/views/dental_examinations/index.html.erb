<h1>Listing Dental Examinations</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Caries findings</th>
      <th>Tsl findings</th>
      <th>Perio findings</th>
      <th>Soft tiss findings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dental_examinations.each do |dental_examination| %>
      <tr>
        <td><%= dental_examination.date %></td>
        <td><%= dental_examination.caries_findings %></td>
        <td><%= dental_examination.tsl_findings %></td>
        <td><%= dental_examination.perio_findings %></td>
        <td><%= dental_examination.soft_tiss_findings %></td>
        <td><%= link_to 'Show', dental_examination %></td>
        <td><%= link_to 'Edit', edit_dental_examination_path(dental_examination) %></td>
        <td><%= link_to 'Destroy', dental_examination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

