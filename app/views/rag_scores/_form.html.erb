<%= simple_form_for(@rag_score) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date %>
    <%= f.input :version %>
    <%= f.input :caries_score %>
    <%= f.input :tsl_score %>
    <%= f.input :perio_score %>
    <%= f.input :soft_tiss_score %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
